
$width = 1440px
$height = 900px

$highlight-color = #c63c2e

p
  margin 4px 0

em
  font-style normal
  font-weight bold

#title h1
  font-size 320%
  text-align center

h2
  font-size 320%
  text-align center
  line-height 100%

h3
  font-size 300%
  text-align center
  line-height 100%
  margin-bottom 20px

a
  text-shadow 0 2px 2px rgba(0, 0, 0, .1)
  padding 0
  transition 0
a:hover
  text-shadow 0 2px 2px rgba(0, 0, 0, .1) 
  color #2980b9

pre.prettyprint
  font-size 65%
  margin 5px 0 10px
  padding 5px 10px
  border none
  border-left 5px solid #eee

.step
  width $width

.impress-enabled .step
  opacity 0.1
.impress-on-overview .step
  opacity 1

.slide
  width $width
  height $height
  padding 40px

.highlight
  color $highlight-color

ul.indent
  list-style disc
  padding-left 40px
  font-size 80%

#title p
  text-align right
  margin-right 100px

#url-part p
  font-size 150%
  line-height 100%
  text-align center
  margin-top 40px
#url-part p a:hover
  color $highlight-color
  background #f5f5f5
#url-part ul
  font-size 120%
  line-height 150%
  width 750px
  margin 40px auto
#url-part li span
  display inline-block
  margin-right 50px
  width 300px
  text-align right

#ids ul
  font-family monospace
  margin-top 150px
  font-size 200%
  line-height 150%
  text-align center

#avoid-static p
  line-height 150%
